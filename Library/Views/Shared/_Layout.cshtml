@{
    Layout = null;
    var currentController = ViewContext.RouteData.Values["controller"] as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    @Styles.Render("~/Content/css")
</head>
<body>
    <header class="top-nav">
        <span class="logo">Library</span>
        <a href="@Url.Action("Index", "Client")"
           class="@(currentController == "Client" ? "active" : "")">
            Клиенты
        </a>
        <a href="@Url.Action("Index", "Book")"
           class="@(currentController == "Book" ? "active" : "")">
            Книги
        </a>
    </header>

    <main class="content">
        @RenderBody()
    </main>
    <script src="~/Scripts/jquery-3.7.0.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
