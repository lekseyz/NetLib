@model Library.Models.Clients.ClientDetailsViewModel
@{
    ViewBag.Title = "Клиент";
}

<div class="page-header">
    <h1>Клиент</h1>
    <button id="edit-client-btn" class="change-button" title="Изменить данные клиента">
        Изменить
    </button>
    <button id="borrow-btn" class="primary-btn" title="Выдать книгу клиенту">
        Взять книгу
    </button>
</div>

<div id="edit-client-form" class="panel" style="@(Model.IsEditMode ? "" : "display:none;")">
    <h2>Редактирование клиента</h2>

    @Html.ValidationSummary(true)

    @using (Html.BeginForm("Edit", "Client", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="form-row">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div class="form-row">
            @Html.LabelFor(m => m.PassportId)
            @Html.TextBoxFor(m => m.PassportId)
            @Html.ValidationMessageFor(m => m.PassportId)
        </div>

        <button type="submit" class="primary-btn">Сохранить</button>
    }
</div>

<div id="borrow-form" class="panel" style="@(Model.IsBorrowFormOpen ? "display:block;" : "display:none;")">
    <h2>Выдача книги</h2>

    @Html.ValidationSummary(true)

    @using (Html.BeginForm("Borrow", "Client", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("clientId", Model.Id)

        <div class="form-row">
            <label for="borrow-isbn">ISBN</label>
            <input type="text" id="borrow-isbn" name="isbnBorrow" />
        </div>

        <button type="submit" class="primary-btn">Выдать</button>
    }
</div>

<div class="panel">
    <p><strong>Имя: </strong>@Model.Name</p>
    <p><strong>Паспорт: </strong>@Model.PassportId</p>
    <p><strong>Дата регистрации: </strong>@Model.RegistrationDate</p>
    <p><strong>Здесь можно бар код генерировать: </strong>@Model.Id</p>
</div>

<div class="panel">
    <h2>История выдач</h2>

    @if (Model.Notes != null && Model.Notes.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>ISBN</th>
                    <th>Дата выдачи</th>
                    <th>Срок возврата</th>
                    <th>Фактический возврат</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var note in Model.Notes)
                {
                    <tr>
                        <td>@note.Book.Title</td>
                        <td>@note.Book.Isbn</td>
                        <td>@note.IssueDate.ToString("dd.MM.yyyy")</td>
                        <td>@note.DueDate.ToString("dd.MM.yyyy")</td>
                        <td>
                            @(
                            note.ReturnDate.HasValue
                                ? note.ReturnDate.Value.ToString("dd.MM.yyyy")
                                : "Ещё не возвращена"
                         )
                        </td>
                        <td>
                            @if (!note.ReturnDate.HasValue)
                            {
                                using (Html.BeginForm("Return", "Client", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("clientId", Model.Id)
                                    @Html.Hidden("isbn", note.Book.Isbn)

                                    <button type="submit" class="primary-btn small-btn">Вернуть</button>
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Клиент ещё не брал ни одной книги.</p>
    }
</div>

<p>
    @Html.ActionLink("Назад к списку", "Index", "Client")
</p>

@section Scripts { <script src="~/Scripts/App/ClientDetails.js"></script> }

