@model Library.Models.Books.BookDetailsViewModel

@{
    ViewBag.Title = "Книга";
}

<div class="page-header">
    <h1>Книга</h1>

    <button id="edit-book-btn" class="change-button" title="Изменить описание">
        Изменить
    </button>
    <div class="button-container">
    @using (Html.BeginForm("IncreaseAmount", "Book", FormMethod.Post, new { @class = "inline-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("isbn", Model.Isbn)
        <button type="submit" class="add-button" title="Добавить книгу">+</button>
    }

    @using (Html.BeginForm("DecreaseAmount", "Book", FormMethod.Post, new { @class = "inline-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("isbn", Model.Isbn)
        <button type="submit" class="remove-button" title="Удалить книгу">-</button>
    }
    </div>
</div>

<div id="edit-book-form" class="panel" style="@(Model.IsEditMode ? "display:block;" : "display:none;")">
    <h2>Редактирование книги</h2>

    @Html.ValidationSummary(true)

    @using (Html.BeginForm("Edit", "Book", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Isbn)

        <p><strong>Название (только для чтения): </strong>@Model.Title</p>
        <p><strong>Автор (только для чтения): </strong>@Model.Author</p>

        <div class="form-row">
            @Html.LabelFor(m => m.Description)
            @Html.TextAreaFor(m => m.Description, 3, 40, null)
            @Html.ValidationMessageFor(m => m.Description)
        </div>

        <button type="submit" class="primary-btn">Сохранить</button>
    }
</div>


<div class="panel">
    <p><strong>Название: </strong>@Model.Title</p>
    <p><strong>Автор: </strong>@Model.Author</p>
    <p><strong>ISBN: </strong>@Model.Isbn</p>
    <p><strong>Количество экземпляров: </strong>@Model.Amount</p>

    @if (!string.IsNullOrWhiteSpace(Model.Description))
    {
        <p><strong>Описание: </strong>@Model.Description</p>
    }
</div>

<div class="panel">
    <h2>Кто брал эту книгу</h2>

    @if (Model.History != null && Model.History.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Клиент</th>
                    <th>Паспорт</th>
                    <th>Дата выдачи</th>
                    <th>Срок возврата</th>
                    <th>Дата возврата</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var note in Model.History)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(
                                                    note.ClientName,
                                                    "Details",
                                                    "Client",
                                                    new { id = note.ClientId },
                                                    null
                                                )
                        </td>
                        <td>@note.ClientPassportId</td>
                        <td>@note.IssueDate.ToString("dd.MM.yyyy")</td>
                        <td>@note.DueDate.ToString("dd.MM.yyyy")</td>
                        <td>
                            @(
                            note.ReturnDate.HasValue
                                ? note.ReturnDate.Value.ToString("dd.MM.yyyy")
                                : "Ещё не возвращена"
                         )
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Эту книгу ещё никто не брал.</p>
    }
</div>

<p>
    @Html.ActionLink("Назад к списку книг", "Index", "Book")
</p>

@section Scripts { <script  src="~/Scripts/App/BookDetails.js"></script> }
