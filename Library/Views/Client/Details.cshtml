@model Library.Models.Clients.ClientDetailsViewModel
@{
    ViewBag.Title = "Клиент";
}

<div class="page-header">
    <h1>Клиент</h1>
    <button id="edit-client-btn" class="change-button" title="Изменить данные клиента">
        Изменить
    </button>
</div>

<div id="edit-client-form" class="panel" style="@(Model.IsEditMode ? "" : "display:none;")">
    <h2>Редактирование клиента</h2>

    @Html.ValidationSummary(true)

    @using (Html.BeginForm("Edit", "Client", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="form-row">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div class="form-row">
            @Html.LabelFor(m => m.PassportId)
            @Html.TextBoxFor(m => m.PassportId)
            @Html.ValidationMessageFor(m => m.PassportId)
        </div>

        <button type="submit" class="primary-btn">Сохранить</button>
    }
</div>

<div class="panel">
    <p><strong>Имя: </strong>@Model.Name</p>
    <p><strong>Паспорт: </strong>@Model.PassportId</p>
    <p><strong>Дата регистрации: </strong>@Model.RegistrationDate</p>
    <p><strong>Здесь можно бар код генерировать: </strong>@Model.Id</p>
</div>

<div class="panel">
    <h2>История выдач</h2>

    @if (Model.Notes != null && Model.Notes.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>ISBN</th>
                    <th>Дата выдачи</th>
                    <th>Срок возврата</th>
                    <th>Фактический возврат</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var note in Model.Notes)
                {
                    <tr>
                        <td>@note.Book.Title</td>
                        <td>@note.Book.Isbn</td>
                        <td>@note.IssueDate.ToString("dd.MM.yyyy")</td>
                        <td>@note.DueDate.ToString("dd.MM.yyyy")</td>
                        <td>
                            @(
                            note.ReturnDate.HasValue
                                ? note.ReturnDate.Value.ToString("dd.MM.yyyy")
                                : "Ещё не возвращена"
                         )
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Клиент ещё не брал ни одной книги.</p>
    }
</div>

<p>
    @Html.ActionLink("Назад к списку", "Index", "Client")
</p>

@section Scripts {
    <script>(function () {
    var btn = document.getElementById('edit-client-btn');
    var form = document.getElementById('edit-client-form');

    btn.addEventListener('click', function () {

        if (form.style.display === 'none' || form.style.display === '') {
            form.style.display = 'block';
        } else {
            form.style.display = 'none';
        }
     });
     })();</script>
}

